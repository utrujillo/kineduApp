  <div class="row mb-3">
    <div class="col-xl-3 col-lg-3 col-md-6 col-xs-12">
      <h6 class="text-center">BebÃ©s</h6>
      <%= f.select :baby_id, @babies.map { |i| [ i['name'], i['id']] }, { prompt: '- Seleccionar -'}, {:class => 'form-control'} %>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-6 col-xs-12">
